<% layout('layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <h1>My Favourite places in Spain</h1>
    <% for (place of places) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(place.images.length) { %> 
                    <img class="img-fluid" src="<%= place.images[0].url %>" alt="">
                    <% }else { %>
                    <img class="img-fluid" src="" alt="">
                    <% } %>  
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= place.title %></h5>
                        <a href="/places?category=<%= place.category %>"><p class="card-text">
                            <small class="text-muted"><%= place.category %></small>
                        </p></a>
                        <p class="card-text"><%= place.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= place.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/places/<%= place._id %>"><%= place.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <% if (category !=='All' ) { %>
                <a href="/places">All places</a>
                <% } %>
               
