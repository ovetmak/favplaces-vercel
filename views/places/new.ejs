<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Adding new place</h1>
        <div class="col-6 offset-3">
            <form action="/places" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div class="mb-1">
                    <label class="form-label " for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="title" placeholder="title" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-1"><label class="form-label " for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="location" placeholder="location"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-1"><label class="form-label " for="description">Description</label>
                    <textarea class="form-control" name="description" id="description" cols="30" rows="3"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3"><label class="form-label " for="category">Category</label>
                    <select class="form-control" name="category" id="category" category required>
                        <% for (category of categories) {%>
                            <option value="<%= category %>">
                                <%= category %>
                            </option>
                            <% } %>
                    </select>
                </div>
                <!-- <div class="mb-1"><label class="form-label " for="image">Image (url)</label>
                    <input class="form-control" type="text" id="image" name="image" placeholder="image-url" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div> -->
                
                <div class="mb-3">
                    <label for="image" class="form-label">Images</label>
                    <input class="form-control" name="image" type="file" id="image" multiple>
                </div>

                <div class="mb-1"><button class="btn btn-success">Add place</button></div>
            </form>
            <a href="/places">Back to all places</a>
        </div>
    </div>